<h1>New challenge</h1>
<%=@questionaire.question %> 
<%= form_for(@challenge) do |f| %>
  <div class="field">
    <%= f.label :input %><br />
    <%= f.text_field :input %>
    <%= f.hidden_field :questionaire_id, :value => @questionaire.id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%= link_to 'Back', challenges_path %>
